{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "env": {
    "BASH_MAX_TIMEOUT_MS": "300000"
  },
  "includeCoAuthoredBy": false,
  "permissions": {
    "allow": [
      "Skill(report-writing)",
      "Edit(//var/home/hdemers/Dropbox/Documents/Obsidian/Grubhub/Repositories/**)",
      "Edit(//home/hdemers/Dropbox/Documents/Obsidian/Grubhub/Repositories/**)",
      "Edit(//home/hdemers/.cache/jira/**)",
      "Edit(//var/home/hdemers/.cache/jira/**)",
      "Edit(//tmp/**)"
    ],
    "deny": []
  },
  "hooks": {
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/hooks.py notify"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/hooks.py notify --message \"Claude has stopped\""
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "printf '\\033[01;32m%s@%s\\033[00m:\\033[01;34m%s\\033[00m' \"$(whoami)\" \"$(hostname -s)\" \"$(basename \"$(pwd)\")\""
  },
  "enabledPlugins": {
    "gdp@gdp-cli-marketplace": true,
    "on-call@gdp-cli-marketplace": true,
    "coding@gdp-cli-marketplace": true
  },
  "alwaysThinkingEnabled": true,
  "model": "sonnet[1m]"
}
